{
  "name": "ts-ecommerce-api",
  "version": "1.0.0",
  "description": "E-commerce API REST with TS, Express, TypeORM, MySQL and Docker",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "tsc && node dist/server.js",
    "start:dev": "rm -r ./dist && tsc && concurrently \"tsc -w\" \"nodemon dist/server.js\"",
    "start:test": "NODE_ENV=test npm run start:dev",
    "start:prod": "NODE_ENV=production npm start",
    "typeorm": "typeorm-ts-node-esm -d ./src/config/data.source.ts",
    "m:gen": "npm run typeorm migration:generate",
    "m:run": "npm run typeorm migration:run"
  },
  "author": "Eric Rodriguez <feric.rodriguez@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "typeorm-naming-strategies": "^4.1.0",
    "typescript": "^5.1.6"
  }
}
